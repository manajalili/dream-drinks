<div class="container">
  <div class="row my-4">
    <div class="col-md-10 mx-auto">
      <div> <h1><strong>Cocktail's Name</strong></h1>
        <h5><%= @cocktail.name %></h5>
        <% if @cocktail.photo.attached? %>
        <%= cl_image_tag @cocktail.photo.key, height: 214, width: 400, crop: :fill %>
        <% end %>
       </div>
      <div class="mt-4">
        <h2><strong>Doses</strong></h2>
        <% @cocktail.doses.each do |dose| %>
        <p><strong><%= dose.ingredient.name %></strong> : <%= dose.description %> ml <%= link_to '<i class="fa fa-trash destroy_dose"></i>'.html_safe, dose_path(dose), method: :delete %></p>
        <% end %>
      </div>
      <%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-danger" %>
    <%= link_to 'Back', root_path%>
    </div>
  </div>
</div>




